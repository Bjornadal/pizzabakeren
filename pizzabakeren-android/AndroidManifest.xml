<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="no.bjornadal.pizzabakeren"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="21"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application android:label="@string/app_name" android:icon="@drawable/pizza" android:debuggable="true" android:theme="@android:style/Theme.Holo">
        <activity android:name="no.bjornadal.pizzabakeren.activity.MainActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="no.bjornadal.pizzabakeren.activity.ViewOrdersActivity"
            android:label="Dagens bestillinger"
            android:parentActivityName="no.bjornadal.pizzabakeren.activity.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.bjornadal.pizzabakeren.activity.ViewOrdersActivity" />
        </activity>
        <activity
            android:name="no.bjornadal.pizzabakeren.activity.SelectPizzaActivity"
            android:label="Velg din pizza"
            android:parentActivityName="no.bjornadal.pizzabakeren.activity.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.bjornadal.pizzabakeren.activity.SelectPizzaActivity" />
        </activity>
        <activity
            android:name="no.bjornadal.pizzabakeren.activity.SelectSodaActivity"
            android:label="Velg din brus"
            android:parentActivityName="no.bjornadal.pizzabakeren.activity.SelectPizzaActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.bjornadal.pizzabakeren.activity.SelectSodaActivity" />
        </activity>
        <activity
            android:name="no.bjornadal.pizzabakeren.activity.ConfirmActivity"
            android:label="Din bestilling"
            android:parentActivityName="no.bjornadal.pizzabakeren.activity.SelectSodaActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="andoird.support.PARENT_ACTIVITY"
                android:value="no.bjornadal.pizzabakeren.activity.ConfirmActivity" />
        </activity>
        <receiver android:name="no.bjornadal.pizzabakeren.alarm.DeviceBootReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
                <action android:name="no.bjornadal.events.ALARM_START"></action>
            </intent-filter>
        </receiver>
        <service android:name="no.bjornadal.pizzabakeren.service.NotificationService" android:enabled="true">

        </service>
    </application>
</manifest>
